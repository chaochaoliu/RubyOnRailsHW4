<p id="notice"><%= notice %></p>
<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Category ID</th>
      <th>User ID</th>
      <th colspan = 3> </th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post|%>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.category_id %></td>
      <td><%= post.user_id %></td>
      <td><%= link_to 'Show', post %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
      <td><%= link_to 'Destroy', post, method: :delete, data: { conform: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Post', new_post_path %>
